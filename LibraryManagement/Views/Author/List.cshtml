@model List<AuthorListViewModel>

<h3 class="text-center mt-5">Author List</h3>

<!-- Author Cards Section -->
<div class="mt-5">
    @foreach (var author in Model)
    {
        <!-- Card for each author -->
        <div class="card mb-3">
            <div class="card-header fw-bold">
                @author.FirstName
            </div>
            <div class="card-body">
                <!-- Display author details -->
                <p><strong>Author:</strong> @author.FirstName @author.LastName</p>
                <p class="card-text">@author.DateOfBirth</p>

                <!-- Button to view author details -->
                <a asp-controller="Author" asp-action="Details" asp-route-id="@author.Id" class="btn btn-primary"
                   style="background-color: #4B4B4B; border-color: #4B4B4B;">Author Details</a>
                <!-- Button to edit author information -->
                <a asp-controller="Author" asp-action="Edit" asp-route-id="@author.Id" class="btn btn-primary"
                   style="background-color: #4B4B4B; border-color: #4B4B4B;">Edit the Author info</a>
                <!-- Form to delete the author -->
                <form asp-controller="Author" asp-action="Delete" asp-route-id="@author.Id" method="post" style="display:inline;">
                    <button type="submit" class="btn btn-danger" style="background-color: #ff4d4d; border-color: #ff4d4d;">Delete</button>
                </form>
            </div>
        </div>
    }
</div>

<!-- Floating "Add New Author" Button -->
<a asp-controller="Author" asp-action="Create" class="btn rounded-circle text-white p-3"
   style="position: fixed; bottom: 20px; right: 20px; width: 60px; height: 60px; display: flex; justify-content: center; align-items: center; font-size: 24px; background-color: #4B4B4B;"
   title="Add a new author">
    +
</a>



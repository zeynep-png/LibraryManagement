@model AuthorDetailsViewModel

<!-- Container for author details with background and padding -->
<div class="container mt-5 p-4" style="background-color: #4B4B4B; border-radius: 10px;">
    <h3 class="text-center text-white mb-4" style="font-size: 3rem;">Author Details</h3>

    <!-- Card displaying author information -->
    <div class="card" style="background-color: #6E6E6E; border-color: transparent;">
        <div class="card-header fw-bold" style="font-size: 2rem;">
            <!-- Display full name of the author -->
            @Model.FirstName @Model.LastName
        </div>
        <div class="card-body">
            <!-- Display first name -->
            <p class="text-white" style="font-size: 1.5rem;"><strong>First Name:</strong> @Model.FirstName</p>
            <!-- Display last name -->
            <p class="text-white" style="font-size: 1.5rem;"><strong>Last Name:</strong> @Model.LastName</p>
            <!-- Display date of birth formatted -->
            <h4 class="text-white" style="font-size: 1.8rem;">Date of Birth: @Model.DateOfBirth.ToString("MMMM dd, yyyy", System.Globalization.CultureInfo.InvariantCulture)</h4>
        </div>
    </div>

    <div class="text-center mt-4">
        <!-- Buttons for editing, listing, and deleting the author -->
        <div class="text-center mt-4">
            <a asp-controller="Author" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-light fw-bold"
               style="border-radius: 50px; padding: 10px 30px; font-size: 1.2rem;">
                Edit Author
            </a>
            <a asp-controller="Author" asp-action="List" class="btn btn-outline-light fw-bold ms-3"
               style="border-radius: 50px; padding: 10px 30px; font-size: 1.2rem;">
                Back to Author List
            </a>
            <!-- Form for deleting the author -->
            <form asp-controller="Author" asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display:inline;">
                <button type="submit" class="btn btn-danger fw-bold"
                        style="border-radius: 50px; padding: 10px 30px; font-size: 1.2rem;">
                    Delete Author
                </button>
            </form>
        </div>
    </div>
</div>

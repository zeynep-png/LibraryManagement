@model AuthorCreateViewModel

<h3>Add a new Author</h3>

<!-- Form to create a new author -->
<form method="post" asp-controller="Author" asp-action="Create" enctype="multipart/form-data">
    <div class="form-group mb-3">
        <!-- Label and input for first name -->
        <label asp-for="FirstName" class="form-label">First Name</label>
        <input asp-for="FirstName" class="form-control" type="text" />
        <span asp-validation-for="FirstName" class="text-danger mt-2 fw-bold"></span>
    </div>

    <div class="form-group mb-3">
        <!-- Label and input for last name -->
        <label asp-for="LastName" class="form-label">Last Name</label>
        <input asp-for="LastName" class="form-control" type="text" />
        <span asp-validation-for="LastName" class="text-danger mt-2 fw-bold"></span>
    </div>

    <div class="form-group mb-3">
        <!-- Label and input for date of birth -->
        <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
        <input asp-for="DateOfBirth" class="form-control" type="text" placeholder="mm/dd/yyyy" />
        <span asp-validation-for="DateOfBirth" class="text-danger mt-2 fw-bold"></span>
    </div>

    <!-- Submit button to save the new author -->
    <button type="submit" class="btn w-100 mt-2" style="background-color: #4B4B4B; color: white;">Save</button>
</form>
